{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./.vitepress/theme/components/*"],
      "@constants/*": ["./.vitepress/theme/constants/*"]
    }
  },
  "include": ["src/**/*", ".vitepress/**/*"],
  "exclude": ["node_modules", "build", ".vitepress/cache"]
}
